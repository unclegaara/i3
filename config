force_xinerama yes
set $mod Mod4
exec setxkbmap "us,ru" ",winkeys" "grp:ctrl_shift_toggle"
# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:DejaVu Ubuntu Mono Bold 9
# Lock screen
bindsym $mod+b exec i3lock -c 000000 -n
#bindsym $mod+b exec /home/gaara/.i3/screen_lock.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# class                 border  backgr. text    indicator
 client.focused          #4c7899 #1560bd #ffffff #2e9ef4
